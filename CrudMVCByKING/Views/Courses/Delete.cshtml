@model CrudMVCByKING.Models.DTOs.CoursesDto


@{
    ViewData["Title"] = "Delete";
}




<div class="p-6 bg-white rounded-lg shadow-md">
    <h4 class="text-2xl font-semibold mb-4">Delete Courses</h4>
    <hr class="mb-4 border-t border-gray-300">

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="mb-4">
            <span class="text-gray-600 font-semibold">Image</span>
            <img src="@Model.Image" alt="Course Image" class="w-full h-auto mt-2 rounded-lg">
        </div>

        <div class="mb-4">
            <span class="text-gray-600 font-semibold">Title</span>
            <p class="text-xl font-semibold">@Model.Title</p>
        </div>

        <div class="mb-4">
            <span class="text-gray-600 font-semibold">Description</span>
            <p class="text-gray-700">@Model.Desc</p>
        </div>

        <div class="mb-4">
            <span class="text-gray-600 font-semibold">Price</span>
            <p class="text-2xl font-bold text-indigo-600">$@Model.Price</p>
        </div>
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete"class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" /> |
        <a asp-action="Index"  class="ml-2 text-indigo-600 hover:underline">Back to List</a>
    </form>
</div>
